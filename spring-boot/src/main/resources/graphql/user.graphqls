type User {
    calNetId: String!
    firstName: String!
    lastName: String
    isAdmin: Boolean!
}

input UserInput {
    calNetId: String!
    firstName: String!
    lastName: String
    isAdmin: Boolean!
}

extend type Query {
    getUser(calNetId: ID!): User
}

extend type Mutation {
    createUser(user: UserInput): User
    updateUser(userId: ID!, userDetails: UserInput): User
}
