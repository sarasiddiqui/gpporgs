type User {
    userId: String!
    firstName: String!
    lastName: String
    isAdmin: Boolean!
}

input UserInput {
    userId: String!
    firstName: String!
    lastName: String
    isAdmin: Boolean!
}

extend type Query {
    getUser(userId: ID!): User
}

extend type Mutation {
    createUser(details: UserInput!): User
    updateUser(userId: ID!, details: UserInput!): User
    deleteUser(userId: ID!): User
}
